{
  "manifest_version": 2,
  "name": "Lorem Ipsum",
  "description": "This plugin generates Lorem-Ipsum placeholder texts and inserts them into any desired input field.",
  "version": "1.1.0",
  "default_locale": "en",
  "browser_specific_settings": {
    "gecko": {
      "strict_min_version": "56.0a1"
    }
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "menus",
    "contextMenus",
    "activeTab"
  ],
  "icons": {
    "16": "icons/page-16.png",
    "32": "icons/page-32.png",
    "48": "icons/page-48.png"
  }
}